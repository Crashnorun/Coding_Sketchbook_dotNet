<UserControl x:Class="WPF_MVVM.Views.InfoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_MVVM.ModelViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock x:Name="txtTitle" TextWrapping="Wrap"
                   HorizontalAlignment="Left" Margin="35,35,0,0"  VerticalAlignment="Top"
                   Text="{Binding Path=Counter.WindowTitle}"/>

        <Label x:Name="lblCount" 
               HorizontalAlignment="Left" Margin="35,80,0,0" VerticalAlignment="Top"
               Content="{Binding Path=Counter.CounterValue}"/>

        <ProgressBar x:Name="pbar" 
                     Height="10" Margin="35,120,35,0" VerticalAlignment="Top" Foreground="#FF0BC1E4" BorderBrush="{x:Null}" ToolTip="Counter progress"/>

        <Button x:Name="btnCount" 
                Margin="0,0,35,28" HorizontalAlignment="Right" Width="103" Height="20" VerticalAlignment="Bottom" 
                Content="Start Counting" 
                Click="btnCount_Click"/>

    </Grid>
</UserControl>
